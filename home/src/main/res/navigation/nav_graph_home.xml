<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.farm.ezy.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.farm.ezy.home.item_detail.ItemDetailFragment"
        android:label="@string/detail"
        tools:layout="@layout/fragment_item_detail">
        <argument
            android:name="item"
            app:argType="com.farm.ezy.core.models.items.ItemSet" />

        <action
            android:id="@+id/action_itemDetailFragment_to_nav_graph_address"
            app:destination="@id/nav_graph_address" />
    </fragment>
    <include app:graph="@navigation/nav_graph_address" />
</navigation>